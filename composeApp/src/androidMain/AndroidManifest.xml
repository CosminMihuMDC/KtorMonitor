    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".sample.SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_sample_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sample_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">

        <activity
            android:name=".library.ui.KtorMonitorActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/activity_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:taskAffinity="ro.cosminmihu.ktor.monitor.${applicationId}">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".library.ui.notification.ClearBroadcastReceiver"
            android:exported="false" />

        <!-- TODO SAMPLE -->
